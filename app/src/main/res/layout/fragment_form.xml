<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Fragments.FormFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TextViewFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type the respective data bellow" />

    <EditText
        android:id="@+id/txtNameFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        />
    <EditText
        android:id="@+id/txtLastNameFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        />
    <EditText
        android:id="@+id/txtPhoneFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone"
        />
    <EditText
        android:id="@+id/txtEmailFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmitFrag"
        android:text="Submit"
        />
</LinearLayout>